function [piApprox, absEr, relEr, x, y] = MontePi(n)
count = 0;
for i=1:n
    x = rand;
    y = rand;
    if (x^2+y^2) <= 1
        count = count + 1;
        scatter(x,y,10,"blue","filled")
    else
        scatter(x,y,10,"red","filled")
    end
end

piApprox = count / n * 4;
absEr = abs(pi-piApprox);
relEr = absEr / pi;

end